<aura:component controller="ShowOwnerInformationController" implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <aura:attribute name="recordId" type="Id" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="userDetails" type="User" />
    Record Owner Picture
    <figure class="slds-image slds-image--card">
      <a href="javascript:void(0);" class="slds-image__crop slds-image__crop--16-by-9">
        <img src="{!v.userDetails.FullPhotoUrl}" alt="Description of the image" />
      </a>
      <figcaption class="slds-image__title slds-image__title--card">
        <span class="slds-image__text slds-truncate" title="{!v.userDetails.Name}">Record OwnerName : {!v.userDetails.Name}</span>
      </figcaption>
    </figure>

</aura:component>